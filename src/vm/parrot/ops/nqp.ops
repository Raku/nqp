inline op nqp_hllize(out PMC, invar PMC) {
    INTVAL obj_hll = $2->vtable->base_type == smo_id
        ? STABLE($2)->hll_owner
        : 0;
    PMC *  cur_sub = Parrot_pcc_get_sub(interp, CURRENT_CONTEXT(interp));
