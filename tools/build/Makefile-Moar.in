	    --setting=NQPCORE --no-regex-lib --target=mbc \
	    --output=$(M_STAGE1_DIR)/$(QASTNODE_MOAR) $(M_STAGE1_DIR)/$(QASTNODE_COMBINED)

$(M_STAGE1_DIR)/$(QREGEX_MOAR): $(M_STAGE0_DIR) $(QREGEX_SOURCES) $(M_STAGE1_DIR)/$(QASTNODE_MOAR)
