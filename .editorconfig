# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
[t/p5regex/*]
indent_style = tab
[t/qregex/*]
indent_style = tab
[*.t]
indent_style = space
